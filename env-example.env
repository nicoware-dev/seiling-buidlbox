# Seiling Buidlbox Environment Configuration
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# REQUIRED CREDENTIALS (MUST BE PROVIDED)
# =============================================================================

# OpenAI API Key (required for AI services)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Sei Private Key (required for blockchain operations)
SEI_PRIVATE_KEY=0xyour_sei_private_key_here

# =============================================================================
# PROFILE & DEPLOYMENT
# =============================================================================

# Deployment profile (default, local-dev, remote, full-local)
PROFILE=default

# Base domain for services
BASE_DOMAIN_NAME=localhost

# Traefik email (required when ENABLE_TRAEFIK=yes)
TRAEFIK_EMAIL=admin@your-domain.com

# =============================================================================
# SERVICE ENABLE/DISABLE FLAGS
# =============================================================================

# Core UI Services
ENABLE_OPENWEBUI=yes
ENABLE_N8N=yes
ENABLE_FLOWISE=yes

# AI Agent Services
ENABLE_ELIZA=yes
ENABLE_CAMBRIAN=yes
ENABLE_SEI_MCP=yes

# Database Services
ENABLE_POSTGRES=yes
ENABLE_REDIS=yes
ENABLE_QDRANT=yes
ENABLE_NEO4J=yes

# Infrastructure Services (optional)
ENABLE_TRAEFIK=no
ENABLE_OLLAMA=no

# =============================================================================
# SERVICE PORTS
# =============================================================================

# User Interface Services
OPENWEBUI_PORT=5002
N8N_PORT=5001
FLOWISE_PORT=5003

# AI Agent Services
ELIZA_PORT=5005
CAMBRIAN_AGENT_PORT=5006
MCP_SERVER_PORT=5004

# Database Services
POSTGRES_PORT=5432
REDIS_PORT=6379
QDRANT_PORT=6333
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Infrastructure Services
TRAEFIK_PORT=8080
OLLAMA_PORT=11434

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=seiling123
POSTGRES_DB=seiling

# Redis
REDIS_PASSWORD=seiling123

# Neo4j
NEO4J_AUTH=neo4j/seiling123

# n8n Database (SQLite default)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite
DB_SQLITE_POOL_SIZE=10
DB_SQLITE_VACUUM_ON_STARTUP=true

# =============================================================================
# SECURITY KEYS (CHANGE FOR PRODUCTION!)
# =============================================================================

# n8n Security
N8N_ENCRYPTION_KEY=seiling-encryption-key
N8N_USER_MANAGEMENT_JWT_SECRET=seiling-jwt-secret

# OpenWebUI
WEBUI_SECRET_KEY=seiling-webui-secret

# Flowise
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=seiling123

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Sei Network RPC URL
RPC_URL=https://evm-rpc.sei-apis.com

# =============================================================================
# PRODUCTION SECURITY NOTES
# =============================================================================
# 
# For production deployments, you MUST:
# 1. Generate strong, unique passwords for all services
# 2. Use secure encryption keys (32+ characters)
# 3. Set your actual domain in BASE_DOMAIN_NAME
# 4. Enable Traefik with valid SSL certificates
# 5. Provide your actual API keys and private keys
# 
# Review all security settings before production use! 